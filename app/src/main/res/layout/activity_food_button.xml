<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.markxsimu.budgetxp.FoodButtonActivity">

    <TextView
        android:id="@+id/FoodBudgetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="42dp" />

    <TextView
        android:id="@+id/totalFood"
        android:layout_width="180dp"
        android:layout_height="27dp"
        android:text="@string/totalFood"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="161dp" />

    <TextView
        android:id="@+id/TotalFoodAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="161dp" />

    <TextView
        android:id="@+id/FoodBudget"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="@string/foodBudget"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="123dp" />

    <TextView
        android:id="@+id/FoodBudgetAmt"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="$0.00"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="123dp" />

    <TextView
        android:id="@+id/RemainingFood"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/remainingExp"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="201dp" />

    <TextView
        android:id="@+id/RemainFoodAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="201dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expFeed"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="253dp" />

    <ListView
        android:layout_width="368dp"
        android:layout_height="275dp"
        android:entries="@drawable/dark_g_rectangle"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="288dp" />

</android.support.constraint.ConstraintLayout>
